    emoji_dict = {":)": "ğŸ˜Š", ":D": "ğŸ˜", ":P": "ğŸ˜›", ";)": "ğŸ˜‰", ":(": "ğŸ˜", ":'(": "ğŸ˜¢", ":/": "ğŸ˜•", ":x": "ğŸ˜¡"}
