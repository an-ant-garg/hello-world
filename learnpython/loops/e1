mystery_number = 6
guess_count = 0
guess_limit = 3

while   guess_count < guess_limit:
    guess = int(input("Guess: "))
    guess_count += 1
    if  guess == mystery_number:
        print("Congratulations! You have won!")
        break
else:
	    print("Alas! You've used up all your chances. Better luck next time.")
